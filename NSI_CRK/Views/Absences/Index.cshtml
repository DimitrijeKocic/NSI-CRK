@model IEnumerable<NSI_CRK.Models.Absence>

@{
    ViewBag.Title = "Index";
}

<div class="div-margin">
    <h2 style="display:inline">Absences</h2>
    <div style="float:right">
        <div class="div-search">
            <input type="search" class="input-search" placeholder="Search..." />
            <button class="btn btn-outline-secondary" type="button" style="outline:none"><span class="glyphicon glyphicon-search"></span></button>
        </div>
        <input style="width:100px;height:36px" type="button" value="Create New" onclick="location.href='@Url.Action("Create")'" />
    </div>    
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeginDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfDays)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BeginDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfDays)
        </td>
        <td style="text-align:end">
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
